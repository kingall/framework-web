<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lighting.framework.system.mapper.OrgMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap"
		type="com.lighting.framework.system.domain.Org">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="tel" property="tel" />
		<result column="desc" property="desc" />
		<result column="code" property="code" />
		<result column="pcode" property="pcode" />
		<result column="creater" property="creater" />
		<result column="create_time" property="createTime" />
		<result column="updater" property="updater" />
		<result column="update_time" property="updateTime" />
		<result column="isdel" property="isdel" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, name, tel, desc, creater, create_time, updater,
		update_time,
		isdel,code,pcode
	</sql>
	<!-- 根据父节点查询包括自在内所有子节点 -->
	<select id="getOrgTree" resultMap="BaseResultMap"
		parameterType="string">
		select * from sys_org where code = #{pcode} or pcode =
		#{pcode}
	</select>
	
	<select id="getOrgByCode" resultMap="BaseResultMap"
		parameterType="string">
		select * from sys_org where code = #{orgCode}
	</select>

</mapper>
